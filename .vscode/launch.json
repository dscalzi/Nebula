    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Generate Distribution",
            "program": "${workspaceFolder}\\src\\index.ts",
            "args": [
                "g", "distro"
            ],
            "preLaunchTask": "build",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "outputCapture": "std",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Install Dev Distribution",
            "program": "${workspaceFolder}\\src\\index.ts",
            "args": [
                "g", "distro", "distribution_dev", "--installLocal"
            ],
            "preLaunchTask": "build",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "outputCapture": "std"
        }
    ]
}
